{
  "name": "trivia-p2p",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "playwright"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3"
  },
  "scripts": {
    "dev": "bun --filter '@trivia-p2p/*' dev",
    "build": "bun --filter '@trivia-p2p/*' build",
    "test:unit": "bun --filter '@trivia-p2p/*' test:unit",
    "test:e2e": "bun --filter '@trivia-p2p/*' test:e2e",
    "lint": "eslint .",
    "prettier:fix": "prettier --write .",
    "prettier:check": "prettier --check ."
  }
}
