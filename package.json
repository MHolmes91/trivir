{
  "name": "trivia-p2p",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "playwright"
  ],
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "dev": "bun --filter '@trivia-p2p/*' dev",
    "build": "bun --filter '@trivia-p2p/*' build",
    "test:unit": "bun --filter '@trivia-p2p/*' test:unit",
    "test:e2e": "bun --filter '@trivia-p2p/*' test:e2e",
    "lint": "eslint .",
    "prettier:fix": "prettier --write .",
    "prettier:check": "prettier --check ."
  }
}
